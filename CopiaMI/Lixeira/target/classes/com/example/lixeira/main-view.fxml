<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lixeira.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Abrir" onAction="#abrirLixeira"/>
    <Button text="Travar" onAction="#travarLixeira"/>
    <Button text="Esvaziar" onAction="#esvaziarLixeira"/>
    <Button text="Colocar Lixo" onAction="#colocarLixo"/>
</VBox>
