<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="441.0" prefWidth="517.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lixeira.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="avisar" onAction="#enviarMensagem" text="Enviar" />
   <TextField fx:id="mensagem" prefHeight="24.0" prefWidth="339.0" />

    <Label fx:id="mensageText" />
    <Button fx:id="abrirLixeira" onAction="#abrirLixeira" text="Abrir" />
    <Button fx:id="travarLixeira" onAction="#travarLixeira" text="Travar" />
    <Button fx:id="EsvaziarLixeira" onAction="#esvaziarLixeira" text="Esvaziar" />
    <Button fx:id="colocarLixo" onAction="#colocarLixo" text="Colocar Lixo" />
</VBox>
